@page
@model IndexModel
@{
    ViewData["Title"] = "My Favorite Song";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <style>
        /* ====== Base Page Styling ====== */
        body {
            font-family: 'Poppins', sans-serif;
            background: radial-gradient(circle at top, #0a0a0a 0%, #000 100%);
            margin: 0;
            padding: 0;
            text-align: center;
            height: 100vh;
            overflow-x: hidden;
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        /* Animated neon grid background */
        body::before {
            content: "";
            position: fixed;
            top: 0; left: 0;
            width: 100%;
            height: 100%;
            background: 
                repeating-linear-gradient(0deg, rgba(255,255,255,0.05) 0px, rgba(255,255,255,0.05) 1px, transparent 1px, transparent 40px),
                repeating-linear-gradient(90deg, rgba(255,255,255,0.05) 0px, rgba(255,255,255,0.05) 1px, transparent 1px, transparent 40px);
            animation: moveGrid 10s linear infinite;
            z-index: 0;
        }

        @@keyframes moveGrid {
            from { background-position: 0 0, 0 0; }
            to { background-position: 40px 40px, 40px 40px; }
        }

        /* ====== Header Section ====== */
        header {
            position: relative;
            z-index: 1;
            margin-top: -60px;
        }

        h1 {
            font-size: 3.5em;
            letter-spacing: 2px;
            text-transform: uppercase;
            font-weight: 800;
            margin-bottom: 10px;
            animation: float 4s ease-in-out infinite;
            text-shadow:
                0 0 5px #00fff2,
                0 0 10px #00fff2,
                0 0 20px #00fff2,
                0 0 40px #00fff2;
        }

       @@keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-15px); }
        }

        p {
            font-size: 1.3em;
            opacity: 0.8;
        }

        /* ====== YouTube Video Styling ====== */
        .video-container {
            position: relative;
            width: 80%;
            max-width: 800px;
            margin: 40px auto;
            padding-bottom: 45%;
            height: 0;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 0 30px rgba(0, 255, 255, 0.4);
            z-index: 1;
        }

        .video-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: none;
        }

        /* ====== Responsive ====== */
        @@media (max-width: 600px) {
            h1 { font-size: 2em; }
        }
    </style>
</head>
<body>
    <header>
        <h1 id="animatedTitle">My Favorite Song 🎧</h1>
        <p>Feel the vibe, live the beat.</p>
    </header>

    <div class="video-container">
        <!-- Replace this YouTube link with your favorite song -->
        <iframe 
            src="https://www.youtube.com/embed/60ItHLz5WEA?autoplay=0&mute=0"
            title="YouTube video player"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen>
        </iframe>
    </div>

    <script>
        // ====== Dynamic Neon Color Animation ======
        const title = document.getElementById('animatedTitle');
        let hue = 0;

        function animateTitle() {
            hue = (hue + 1) % 360;
            const neonColor = `hsl(${hue}, 100%, 60%)`;
            title.style.textShadow = `
                0 0 5px ${neonColor},
                0 0 10px ${neonColor},
                0 0 20px ${neonColor},
                0 0 40px ${neonColor},
                0 0 80px ${neonColor}
            `;
            title.style.color = neonColor;
            requestAnimationFrame(animateTitle);
        }

        animateTitle();
    </script>
</body>
</html>
